<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widget_interface.weather_interfaces.interfaces.interface_1.Interface_1">

    <LinearLayout
        android:id="@+id/LinearWeatherArka"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/RelativeWeatherFiltre"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:background="@android:drawable/ic_menu_sort_by_size"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:textSize="20dp"
                android:text="New York"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:orientation="vertical"></LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeWeatherFiltre2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="Today"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:text="Tomorrow"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:text="7 Days"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearWeatherFiltre"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="34Â°C"
                    android:textSize="100dp" />


            </LinearLayout>

            <TableRow
                android:layout_width="210dp"
                android:layout_height="2dp"
                android:background="#fff"
                android:gravity="center_vertical"></TableRow>

            <LinearLayout
                android:id="@+id/LinearWeatherSunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sunny"
                android:textSize="20dp"
                android:textColor="@android:color/background_light"/>

        </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="50dp"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageWeatherSun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunny"
                    android:textColor="@android:color/background_light"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="50dp"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageWeatherSunhalf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partly"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="50dp"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageWeatherSunhalf2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partly"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="50dp"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageWeatherRain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thunder"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="50dp"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageWeatherRain2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raining"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="50dp"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageWeatherRain2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raining"
                    android:textColor="@android:color/background_light"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>