<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widget_interface.time_interfaces.interfaces.interface_1.Interface_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relativeTimeust"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#5540a3ff"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/Buttonmenu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <Button
                            android:id="@+id/ButtonfaceustOrta"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@android:color/background_light" />

                        <Button
                            android:id="@+id/Buttonsearch"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@android:color/background_light"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="90dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="#5540a3ff"
                            android:text="TIMELINE APP"
                            android:textColor="#FFFFFF"
                            android:textSize="35dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="45dp"
                            android:background="#5540a3ff"
                            android:text="15.04.2018"
                            android:textColor="#FFFFE600"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#5540a3ff"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_marginTop="10dp"
                            android:id="@+id/radioButton1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"/>


                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="55dp"
                            android:background="@android:color/transparent"
                            android:text="7pm"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="18dp"/>

                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="25dp"
                            android:layout_alignParentEnd="true"
                            android:background="@android:color/transparent"
                            android:textColor="#FFBA0845"
                            android:textSize="20dp"
                            android:text="wake Up"/>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#5540a3ff"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_marginTop="10dp"
                            android:id="@+id/radioButton2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"/>


                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="55dp"
                            android:background="@android:color/transparent"
                            android:text="9pm"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="18dp"/>

                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="25dp"
                            android:layout_alignParentEnd="true"
                            android:background="@android:color/transparent"
                            android:textColor="#FFBA0845"
                            android:textSize="20dp"
                            android:text="DESIGN TIME"/>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#5540a3ff"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_marginTop="10dp"
                            android:id="@+id/radioButton3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"/>


                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="65dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="55dp"
                            android:background="@android:color/transparent"
                            android:text="12pm"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="18dp"/>

                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="25dp"
                            android:layout_alignParentEnd="true"
                            android:background="@android:color/transparent"
                            android:textColor="#FFBA0845"
                            android:textSize="20dp"
                            android:text="LUNCH BREAK"/>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#5540a3ff"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_marginTop="10dp"
                            android:id="@+id/radioButton4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center_horizontal"/>


                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="55dp"
                            android:background="@android:color/transparent"
                            android:text="5pm"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="18dp"/>

                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="25dp"
                            android:layout_alignParentEnd="true"
                            android:background="@android:color/transparent"
                            android:textColor="#FFBA0845"
                            android:textSize="20dp"
                            android:text="FINISH WORK"/>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/ButtonPlus"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="25dp"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>